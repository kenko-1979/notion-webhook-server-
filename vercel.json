{
    "version": 2,
    "builds": [
        {
            "src": "main.py",
            "use": "@vercel/python",
            "config": {
                "runtime": "python3.13",
                "maxLambdaSize": "15mb"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "main.py"
        }
    ],
    "env": {
        "PYTHONPATH": "."
    },
    "git": {
        "deploymentEnabled": {
            "main": true
        }
    },
    "github": {
        "enabled": true,
        "silent": true
    }
} 